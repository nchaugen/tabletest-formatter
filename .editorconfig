# EditorConfig configuration for TableTest Formatter
# https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_style = space
indent_size = 4

# Kotlin source files
[*.kt]
indent_style = space
indent_size = 4

# Standalone table files (no indentation)
[*.table]
indent_style = space
indent_size = 0

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML/POM files
[*.{xml,pom}]
indent_style = space
indent_size = 4
